<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    android:weightSum="100">


    <TextView
        android:id="@+id/mapNameEditor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="Hello World"
        android:textColor="#F5E0E0"
        android:textSize="20sp"
        android:textAlignment="center"/>


    <ImageButton
        android:id="@+id/saveEditImagebutton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/mapNameEditor"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:backgroundTint="#00FFFFFF"
        android:tint="#64FFDA"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <com.example.codbattleplanner.PaintImageView
        android:id="@+id/mapEditScreen"
        android:layout_below="@+id/saveEditImagebutton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:scaleType="centerCrop" />

</RelativeLayout>